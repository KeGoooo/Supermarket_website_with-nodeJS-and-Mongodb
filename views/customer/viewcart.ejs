<%- include('../partials/header') -%>
<%- include("../partials/navbar") -%>

<section class="product" id="cart">

    <h1 class="heading"> our <span>products</span></h1>
    
    <%chunk.forEach((carts)=>{%>
        
    <div class="box-container">
        <%carts.forEach((cart)=>{%>
        <div class="box">
            <div class="image">
                <img src="<%='/images/'+cart.photo%>" alt="image about <%=cart.pname%>">
            </div>
            
            <div class="content">
                <h3><%=cart.pname%></h3>
                <div class="price">$<%=cart.price%></div>
                
                <br>
                <br>
                
                <a href="<%='deletefromcart/'+cart.id%>" class="btn red"   id="deleteBtn" data-id="<%= cart.id %>">Delete</a>
                <% if ((user)) {%>
                   
                <%}%>
            </div>
        </div>

        <%})%>

    </div>
    <%})%>

</section>
   
